<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane xmlns="http://javafx.com/javafx/24.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.myApp.ui.MenuController"
          hgap="16.0" vgap="16.0"
          stylesheets="@menu.css"
          prefWidth="720.0" prefHeight="480.0">

    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <!-- 8% | 84% | 8%  -->
    <columnConstraints>
        <ColumnConstraints percentWidth="8"/>
        <ColumnConstraints percentWidth="84"/>
        <ColumnConstraints percentWidth="8"/>
    </columnConstraints>

    <!-- top spacer | title | spacer | content | bottom spacer -->
    <rowConstraints>
        <RowConstraints percentHeight="8"/>
        <RowConstraints minHeight="40" vgrow="NEVER"/>
        <RowConstraints percentHeight="3"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints percentHeight="8"/>
    </rowConstraints>

    <!-- Título -->
    <children>
        <Label text="Sistema de Gestión Académica"
               GridPane.columnIndex="1" GridPane.rowIndex="1"
               GridPane.halignment="CENTER"
               styleClass="app-title">
            <font><Font size="22.0"/></font>
        </Label>

        <!-- Subtítulo opcional -->
        <!--
        <Label text="Menú principal"
               GridPane.columnIndex="1" GridPane.rowIndex="2"
               GridPane.halignment="CENTER"
               styleClass="app-subtitle"/>
        -->

        <!-- Card central -->
        <GridPane GridPane.columnIndex="1" GridPane.rowIndex="3"
                  hgap="12.0" vgap="12.0"
                  styleClass="card">
            <padding>
                <Insets top="28" right="28" bottom="28" left="28"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="56"/>
                <RowConstraints minHeight="56"/>
                <RowConstraints minHeight="56"/>
            </rowConstraints>

            <effect>
                <DropShadow radius="16" color="#00000033" offsetY="4"/>
            </effect>

            <children>
                <Button text="Gestión de Cursos – Profesores"
                        onAction="#irAOpcionesCursosProfesores"
                        GridPane.rowIndex="0"
                        maxWidth="Infinity"
                        styleClass="menu-btn"/>

                <Button text="Gestión de Cursos – Personas"
                        onAction="#irACursosPersonas"
                        GridPane.rowIndex="1"
                        maxWidth="Infinity"
                        styleClass="menu-btn"/>

                <Button text="Gestión de Cursos Inscritos"
                        onAction="#irACursosInscriptos"
                        GridPane.rowIndex="2"
                        maxWidth="Infinity"
                        styleClass="menu-btn primary"/>
            </children>
        </GridPane>
    </children>
</GridPane>
